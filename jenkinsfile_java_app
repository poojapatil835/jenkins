pipeline {
    agent any
    stages {
        stage('code checkout') {
            steps {
                checkout([$class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[url: 'https://github.com/harshaprakash100/java_app.git',
                        credentialsId: 'github_hp']]])
            }
        }


        stage ('unit testing') {
            steps {
                sh 'mvn test'
                
            }
        } 
        
        stage ('integeration testing') {
            steps {
                sh 'mvn-integeration test'
            }
        }
        stage ('load testing'){
            steps {
                sh 'mvn verify'
            }
        }
    
                

    }

}